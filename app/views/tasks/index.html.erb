
<div class="container">
  <h1>All Tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li>
      <% if task.completed %> 
        <i class="fas fa-check-square"></i>
        <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task.id) %>
      </li>
      <% end %>
  </ul>
  <%= link_to "New Task", new_path %>
</div>